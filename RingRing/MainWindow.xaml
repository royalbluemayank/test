                                        </Canvas>
                                    </Border>
                                </StackPanel>
                            </Expander.Header>
                            <ItemsPresenter Margin="0,10,0,0"/>
                        </Expander>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Background" Value="White"/>
